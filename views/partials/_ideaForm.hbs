<div class="card card-body">
	<h3>{{pageTitle}}</h3>
	<form action="{{or methodURL  " /ideas/ " id}}" method="POST">
		{{#if method}}
		<input type="hidden" name="_method" value="{{method}}"> {{/if}}
		<div class="form-group">
			<label for="title">Title</label>
			<input type="text" class="form-control" name="title" required value={{title}}>
		</div>
		<div class="form-group">
			<label for="details">Details</label>
			<textarea type="text" class="form-control" name="details" required>{{details}}</textarea>
		</div>
		<button type="submit" class="btn btn-primary">Save âž¡</button>
	</form>
</div>
