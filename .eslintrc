{
  "extends": ["airbnb", "prettier"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "trailingComma": "all"
      }
    ],
    "radix": 0,
    "no-unused-vars": ["error", { "argsIgnorePattern": "next" }]
  },
  "env": {
    "es6": true,
    "node": true,
    "browser": true,
    "jest": true
  },
  "plugins": ["prettier"]
}
